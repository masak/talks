cd ../november; git log --date=iso | grep -A1 ^Author | perl6p -e '$_ = .subst(/ [\+|\-]\d**4/, "").subst(/(\d\d)\s(\d\d)/, {"$0T$1"})' | perl -Mstrict -MDateTime::Format::ISO8601 -ne 'chomp; if (/^Date:\s+(\S+)/) {  print DateTime::Format::ISO8601->parse_datetime( $1 )->epoch, "\n" } elsif (/Author: (\S+(:?\s+\w+)*)/) { print $1, "\n" } else {print $_, "\n" }' | perl -e 'while (<>) { chomp; $_ .= "\t" . <>; <>; print }'
